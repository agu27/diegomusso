    <script>
        let soc = document.getElementById('societies');
        let tax = document.getElementById('taxation');
        let work = document.getElementById('work');
        let countable = document.getElementById('countable');
        let finantial = document.getElementById('finantial');
        let socBody = document.getElementById('societies-body');
        let taxBody = document.getElementById('taxation-body');
        let workBody = document.getElementById('work-body');
        let countableBody = document.getElementById('countable-body');
        let finantialBody = document.getElementById('finantial-body');
        let socDisplay = 0;
        let taxDisplay = 0;
        let workDisplay = 0;
        let countableDisplay = 0;
        let finantialDisplay = 0;

        soc.addEventListener("click", (e) => {
            console.log(e)
            if(socDisplay == 0) {
                socBody.style.display = 'block';
                socDisplay = 1;
            }

            else {
                socBody.style.display = 'none';
                socDisplay = 0;
            }
        })

        tax.addEventListener("click", (e) => {
            if(taxDisplay == 0) {
                taxBody.style.display = 'block';
                taxDisplay = 1;
            }

            else {
                taxBody.style.display = 'none';
                taxDisplay = 0;
            }
        })

        work.addEventListener("click", (e) => {
            if(workDisplay == 0) {
                workBody.style.display = 'block';
                workDisplay = 1;
            }

            else {
                workBody.style.display = 'none';
                workDisplay = 0;
            }
        })

        countable.addEventListener("click", (e) => {
            if(countableDisplay == 0) {
                countableBody.style.display = 'block';
                countableDisplay = 1;
            }

            else {
                countableBody.style.display = 'none';
                countableDisplay = 0;
            }
        })

        finantial.addEventListener("click", (e) => {
            if(finantialDisplay == 0) {
                finantialBody.style.display = 'block';
                finantialDisplay = 1;
            }

            else {
                finantialBody.style.display = 'none';
                finantialDisplay = 0;
            }
        })

    </script>

