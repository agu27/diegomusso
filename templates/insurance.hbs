        let newThreeTitle = document.getElementById('new3Title');
        let newFour = document.getElementById('new4');
        let newFourTitle = document.getElementById('new4Title');
        let newFive = document.getElementById('new5');
        let newFiveTitle = document.getElementById('new5Title');

